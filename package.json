{
  "name": "website-validator",
  "version": "0.6.0",
  "description": "Comprehensive website validation",
  "main": "dist/index.js",
  "type": "module",
  "keywords": [
    "website",
    "validator"
  ],
  "files": [
    "dist"
  ],
  "repository": "github:sashee/website-validator",
  "scripts": {
    "test": "npm run build && node --test dist/**/*.test.js",
    "test_dev": "TS_NODE_TRANSPILE_ONLY=true node --watch --test --test-reporter='./src/tests/test-reporter.ts' --loader ts-node/esm --test-name-pattern=$npm_config_tests src/**/*.test.ts",
    "build": "tsc --build && npm run copy_static_files",
    "clean": "tsc --build --clean && npm run copy_static_files",
    "prepare": "npm run clean && npm run build",
    "copy_static_files": "cp -r src/tests/*.woff2 dist/tests/ && cp src/.npmignore dist/.npmignore"
  },
  "author": {
    "name": "Tamas Sallai",
    "url": "https://advancedweb.hu/"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/deep-equal": "^1.0.4",
    "@types/jmespath": "^0.15.2",
    "@types/jsdom": "^21.1.6",
    "@types/xml2js": "^0.4.14",
    "ts-essentials": "^9.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "fast-equals": "^5.0.1",
    "get-port": "^7.0.0",
    "html-validate": "^8.9.1",
    "jmespath": "^0.16.0",
    "jsdom": "^24.0.0",
    "mime": "^4.0.1",
    "postcss": "^8.4.35",
    "robots-parser": "^3.0.1",
    "rxjs": "^7.8.1",
    "srcset": "^5.0.1",
    "with-worker-threads": "^0.1.0",
    "xml2js": "^0.6.2"
  }
}
