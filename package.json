{
  "name": "website-validator",
  "version": "2.0.7",
  "description": "Comprehensive website validation",
  "main": "dist/index.js",
  "type": "module",
  "keywords": [
    "website",
    "validator"
  ],
  "files": [
    "dist",
		"*.nix",
		"_package.json",
		"_package-lock.json"
  ],
  "repository": "github:sashee/website-validator",
  "scripts": {
    "test": "npm run build && node --test --enable-source-maps dist/**/*.test.js",
    "test_dev": "npm run build && NODE_DEBUG=website-validator* node --test --test-only --enable-source-maps --inspect dist/**/*.test.js",
    "build": "tsc --build && npm run copy_static_files",
    "clean": "tsc --build --clean",
    "prepare": "npm run clean && npm run build",
    "copy_static_files": "cp -u src/tests/slick.woff2 dist/tests/slick.woff2 && cp -u src/.npmignore dist/.npmignore"
  },
  "author": {
    "name": "Tamas Sallai",
    "url": "https://advancedweb.hu/"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/deep-equal": "^1.0.4",
    "@types/jmespath": "^0.15.2",
    "@types/jsdom": "^27.0.0",
    "@types/xml2js": "^0.4.14",
    "@types/node": "^24.7.2",
    "@zip.js/zip.js": "^2.8.7",
    "memory-streams": "^0.1.3",
    "ts-essentials": "^10.1.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/pdfkit": "^0.17.3",
    "@types/vnu-jar": "^17.11.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "epubcheck-static": "4.0.0-v5.3.0",
    "fast-equals": "^5.3.2",
    "jmespath": "^0.16.0",
    "jsdom": "^27.0.0",
    "mime": "^4.1.0",
    "pdfjs-dist": "^5.4.296",
    "pdfkit": "^0.17.2",
    "postcss": "^8.5.6",
    "robots-parser": "^3.0.1",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.4",
    "srcset": "^5.0.2",
    "vnu-jar": "^24.10.17",
    "with-file-cache": "3.4.0",
    "with-worker-threads": "^0.5.1",
    "xml2js": "^0.6.2"
  }
}
