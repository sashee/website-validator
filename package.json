{
  "name": "website-validator",
  "version": "1.0.0",
  "description": "Comprehensive website validation",
  "main": "dist/index.js",
  "type": "module",
  "keywords": [
    "website",
    "validator"
  ],
  "files": [
    "dist"
  ],
  "repository": "github:sashee/website-validator",
  "scripts": {
    "test": "npm run build && DEBUG_DEPTH=100 node --test --enable-source-maps dist/**/*.test.js",
    "test_dev": "npm run build && DEBUG=* node --test --test-only --enable-source-maps dist/**/*.test.js",
    "build": "tsc --build && npm run copy_static_files",
    "clean": "tsc --build --clean",
    "prepare": "npm run clean && npm run build",
    "copy_static_files": "cp src/tests/slick.woff2 dist/tests/slick.woff2 && cp src/.npmignore dist/.npmignore"
  },
  "author": {
    "name": "Tamas Sallai",
    "url": "https://advancedweb.hu/"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/deep-equal": "^1.0.4",
    "@types/jmespath": "^0.15.2",
    "@types/jsdom": "^21.1.6",
    "@types/xml2js": "^0.4.14",
    "@zip.js/zip.js": "^2.7.40",
    "memory-streams": "^0.1.3",
    "ts-essentials": "^9.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/debug": "^4.1.12",
    "@types/vnu-jar": "^17.11.2",
    "debug": "^4.3.4",
    "epubchecker": "^5.1.0",
    "fast-equals": "^5.0.1",
    "jmespath": "^0.16.0",
    "jsdom": "^24.0.0",
    "mime": "^4.0.1",
    "muhammara": "^4.1.0",
    "postcss": "^8.4.35",
    "robots-parser": "^3.0.1",
    "rxjs": "^7.8.1",
    "srcset": "^5.0.1",
    "vnu-jar": "^23.4.11",
    "with-file-cache": "^3.2.1",
    "with-worker-threads": "^0.4.0",
    "xml2js": "^0.6.2"
  }
}
