{
  "compilerOptions": {
    "noEmitOnError": true,

		"strict": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,

    "sourceMap": true,
    "target": "es6",
		"module": "node16",
    "moduleResolution": "node16",
		"declaration": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.*"
  ],
	"exclude": [
		"**/*.test.ts"
	]
}
